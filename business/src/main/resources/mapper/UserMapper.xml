<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.taomei.redfruit.business.info.infrastructure.repository.UserMapper">


    <select id="selectUserShortInfo" resultType="com.taomei.redfruit.business.shared.application.dto.UserShortInfo">
      SELECT user_id,birthday,nickname,profile,height,parent_area FROM `user` WHERE user_id = #{value}
    </select>

</mapper>